<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/act_login_action_bar"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/col_EEEEEE"
        android:orientation="horizontal"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/act_login_action_bar_icon_left"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/action_bar_icon_left"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@null"
                android:padding="10dp"
                android:src="@drawable/back_arrow_ffffff"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/act_login_title"
            android:layout_width="fill_parent"
            android:layout_height="49dp"
            android:gravity="center"
            android:text="用户登录"
            android:textColor="@color/col_565656"
            android:textSize="20sp"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/col_action_bar_bottom_line"/>

    <EditText
        android:id="@+id/act_login_et_user_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:hint="用户名"/>

    <EditText
        android:id="@+id/act_login_et_pwd"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:hint="密码"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/act_login_btn_ok"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="登录"/>

</LinearLayout>