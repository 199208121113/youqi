<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/act_login_action_bar"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/col_EEEEEE"
        android:visibility="visible"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/act_login_action_bar_icon_left"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@null"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/back_arrow_ffffff"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/act_login_title"
            android:layout_width="fill_parent"
            android:layout_height="49dp"
            android:gravity="center"
            android:text="用户登录"
            android:textColor="@color/col_565656"
            android:textSize="20sp" />
    </RelativeLayout>

    <EditText
        android:id="@+id/act_login_et_user_name"
        android:layout_width="match_parent"
        android:hint="用户名"
        android:layout_height="40dp" />

    <EditText
        android:id="@+id/act_login_et_pwd"
        android:layout_width="match_parent"
        android:inputType="textPassword"
        android:layout_marginTop="10dp"
        android:hint="密码"
        android:layout_height="40dp" />

    <Button
        android:id="@+id/act_login_btn_ok"
        android:text="登录"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

</LinearLayout>