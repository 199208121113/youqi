<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="FamiliarRecyclerView">
        <attr format="reference|color" name="frv_divider"/>
        <attr format="reference|color" name="frv_dividerVertical"/>
        <attr format="reference|color" name="frv_dividerHorizontal"/>
        <attr format="dimension" name="frv_dividerHeight"/>
        <attr format="dimension" name="frv_dividerVerticalHeight"/>
        <attr format="dimension" name="frv_dividerHorizontalHeight"/>
        <attr format="dimension" name="frv_itemViewBothSidesMargin"/>
        <attr format="reference" name="frv_emptyView"/>
        <attr format="boolean" name="frv_isEmptyViewKeepShowHeadOrFooter"/>
        <attr format="enum" name="frv_layoutManager"><enum name="linear" value="0"/>
            <enum name="grid" value="1"/><enum name="staggeredGrid" value="2"/>
        </attr>
        <attr format="enum" name="frv_layoutManagerOrientation">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>
        <attr format="integer" name="frv_spanCount"/>
        <attr format="boolean" name="frv_isReverseLayout"/>
        <attr format="boolean" name="frv_headerDividersEnabled"/>
        <attr format="boolean" name="frv_footerDividersEnabled"/>
    </declare-styleable>
    <declare-styleable name="ExpandableTextView">
        <attr name="defaultLineCount" format="integer" />
    </declare-styleable>

    <!-- 圆角 -->
    <declare-styleable name="RoundedImageView">
        <attr name="corner_radius" format="dimension" />
        <attr name="round_border_width" format="dimension" />
        <attr name="round_border_color" format="color" />
        <attr name="round_background" format="boolean" />
        <attr name="is_oval" format="boolean" />
        <attr name="android:scaleType" />
    </declare-styleable>

    <!-- 圆形 -->
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

</resources>