<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="center_vertical"
    android:minHeight="45dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_tab_body_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_tab"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_notification" />

        <TextView
            android:id="@+id/tv_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="text"
            android:textSize="12sp" />

    </LinearLayout>
    <TextView
        android:id="@+id/item_tab_red_point"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_toRightOf="@id/item_tab_body_layout"
        android:layout_alignTop="@id/item_tab_body_layout"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="-7dp"
        android:background="@drawable/sh_read_point"
        android:gravity="center"
        android:visibility="gone"
        android:textColor="@color/white"/>
</RelativeLayout>
